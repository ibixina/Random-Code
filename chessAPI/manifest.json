{
  "manifest_version": 3,
  "name": "Lichess Best Move Overly",
  "version": "1.0",
  "description": "Shows the best move on Lichess via cloud eval",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://lichess.org/*",
    "https://lichess.org/api/*",
    "http://localhost:5000/*",
    "https://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"]
    }
  ]
}
