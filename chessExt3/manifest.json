{
  "manifest_version": 3,
  "name": "Chess Analysis Ovrlay",
  "version": "1.0",
  "description": "Shows real-time chess analysis on Lichess games",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://lichess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Chess Analysis"
  }
}

